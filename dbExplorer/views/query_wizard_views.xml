<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Wizard Form View -->
  <record id="db_explorer_query_wizard_form" model="ir.ui.view">
      <field name="name">db.explorer.query.wizard.form</field>
      <field name="model">db.explorer.query.wizard</field>
      <field name="arch" type="xml">
          <form string="SQL Query Runner">
              <header>
                  <button name="action_execute" type="object"
                          string="Execute" class="btn-primary" icon="fa-play"/>
                  <button name="action_export_csv" type="object"
                          string="Export CSV" class="btn-secondary"
                          icon="fa-download" invisible="not has_results"/>
                  <button name="action_save_query" type="object"
                          string="Save Query" class="btn-secondary"
                          icon="fa-save"/>
              </header>
              <sheet>
                  <group>
                      <group>
                          <field name="saved_query_id"
                                 options="{'no_create': True}"
                                 placeholder="Select a saved query..."/>
                      </group>
                      <group>
                          <field name="row_count" readonly="1"/>
                          <field name="execution_time" readonly="1"
                                 widget="float" digits="[10,4]"/>
                      </group>
                  </group>
                  <notebook>
                      <page string="Query" name="query" icon="fa-code">
                          <field name="query" nolabel="1"
                                 placeholder="SELECT * FROM res_partner LIMIT 10"/>
                      </page>
                      <page string="Results" name="results" icon="fa-table"
                            invisible="not has_results">
                          <field name="result_html" nolabel="1"/>
                      </page>
                  </notebook>
                  <field name="has_results" invisible="1"/>
              </sheet>
          </form>
      </field>
  </record>

  <!-- Action to open wizard -->
  <record id="db_explorer_query_wizard_action" model="ir.actions.act_window">
      <field name="name">Run SQL Query</field>
      <field name="res_model">db.explorer.query.wizard</field>
      <field name="view_mode">form</field>
      <field name="target">current</field>
  </record>

  <!-- Menu for quick access -->
  <menuitem id="db_explorer_menu_run_query"
            name="Run SQL Query"
            parent="db_explorer_menu_root"
            action="db_explorer_query_wizard_action"
            sequence="5"/>
</odoo>
